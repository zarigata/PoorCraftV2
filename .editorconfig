# EditorConfig for PoorCraft
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Java source files
[*.java]
indent_style = space
indent_size = 4
max_line_length = 120
continuation_indent_size = 8

# Gradle files
[*.gradle]
indent_style = space
indent_size = 4

# Groovy files (buildSrc)
[*.groovy]
indent_style = space
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# XML files
[*.xml]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Properties files
[*.properties]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Batch scripts
[*.bat]
indent_style = space
indent_size = 2
end_of_line = crlf

# GLSL shaders
[*.{vert,frag,geom,comp,tesc,tese}]
indent_style = space
indent_size = 4

# Lua scripts
[*.lua]
indent_style = space
indent_size = 2
